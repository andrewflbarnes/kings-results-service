<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util.xsd"
       profile="jdbc">

    <util:map id="jdbcShared" map-class="java.util.HashMap" key-type="java.lang.String" value-type="java.lang.String">
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcRaceDao.SELECT_ALL" />
            </key>
            <value>SELECT * FROM kings_races</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcRaceDao.SELECT_BY_LEAGUE" />
            </key>
            <value>SELECT * FROM kings_races WHERE league = ?</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcRaceDao.SELECT_BY_LEAGUE_ROUND" />
            </key>
            <value>SELECT * FROM kings_races WHERE league = ? AND round = ?</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcTeamDao.SELECT_ALL" />
            </key>
            <value>SELECT * FROM kings_teams</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcTeamDao.SELECT_BY_LEAGUE" />
            </key>
            <value>SELECT * FROM kings_teams WHERE league = ?</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcTeamDao.SELECT_BY_LEAGUE_DIVISION" />
            </key>
            <value>SELECT * FROM kings_teams WHERE league = ? AND discipline = ?</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcIndividualDao.SELECT_ALL" />
            </key>
            <value>SELECT * FROM kings_individuals</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcIndividualDao.SELECT_BY_DISCIPLINE" />
            </key>
            <value>SELECT * FROM kings_individuals WHERE discipline = ?</value>
        </entry>
        <entry>
            <key>
                <util:constant static-field="org.kingsski.api.dao.jdbc.JdbcIndividualDao.SELECT_BY_CLUB" />
            </key>
            <value>SELECT * FROM kings_individuals WHERE club = ?</value>
        </entry>
    </util:map>

</beans>