<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd"
       profile="caching">

    <!-- services -->
    <bean id="raceService"
          class="org.kingsski.api.service.RaceService">
        <property name="raceDao" ref="cachingRaceDao"/>
    </bean>

    <bean id="teamService"
          class="org.kingsski.api.service.TeamService">
        <property name="teamService" ref="cachingTeamDao"/>
    </bean>

    <!-- caching daos -->
    <bean id="cacheRaceService"
          class="org.kingsski.api.dao.race.CachingRaceDao">
        <constructor-arg ref="raceService"/>
        <property name="interval" value="5000"/>
    </bean>

    <bean id="cacheTeamService"
          class="org.kingsski.api.dao.team.CachingTeamDao">
        <constructor-arg ref="teamService"/>
        <property name="interval" value="5000"/>
    </bean>

</beans>
