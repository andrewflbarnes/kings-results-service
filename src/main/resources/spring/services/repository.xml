<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd"
       profile="repository">

    <!-- daos -->
    <bean id="raceDao"
          class="org.kingsski.api.dao.race.DummyRaceDao"/>
    <bean id="teamDao"
          class="org.kingsski.api.dao.team.RepositoryTeamDao">
        <property name="teamRepository" ref="teamRepository" />
    </bean>
    <bean id="teamRepository" class="org.kingsski.api.dao.team.TeamRepository" />

</beans>
